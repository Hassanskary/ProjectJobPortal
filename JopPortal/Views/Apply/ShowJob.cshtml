@model JopPortal.Models.Job

@{
    ViewData["Title"] = "ShowJob";
}

<link rel="stylesheet" href="~/css/applyjob.css" />

<h1 style="color:white">ShowJob</h1>

<div class="container" style="background-color:#dddd">
    <h4>Job</h4>
    <hr />
    <dl class="row">

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.JobCategory)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.JobCategory)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.JobType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.JobType)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.JopLocation)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.JopLocation)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.JopSalary)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.JopSalary)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AvailablePlaces)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AvailablePlaces)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.JobDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.JobDate)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.JobDescription)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.JobDescription)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.JobStatus)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.JobStatus)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.CompanyName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.CompanyName)
        </dd>
    </dl>
    @if (ViewBag.HasApplied)
    {
        <form asp-action="CancelApplication" asp-controller="Apply" method="post">
            <input type="hidden" name="jobId" value="@Model.JobId" />
            <button type="submit" class="btn btn-danger">Cancel Application</button>
        </form>
        <form asp-action="Explore_Jobs" asp-controller="Home" method="post">
            <input type="hidden" />
            <button type="submit" class="btn btn-primary">Back to Exploring Jobs</button
        </form>
    }
    else
    {
        <span>
        <form asp-action="ApplyForJob" asp-controller="Apply" method="post">
            <input type="hidden" name="jobId" value="@Model.JobId" />
            <button type="submit" class="btn btn-primary">Apply for this job</button
        </form>
          <form asp-action="Explore_Jobs" asp-controller="Home" method="post">
            <input type="hidden" />
            <button type="submit" class="btn btn-primary">Back to Exploring Jobs</button
        </form>
        </span>

    }
</div>


